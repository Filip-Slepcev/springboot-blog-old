package com.backend.drunkknight.controller;

import org.springframework.beans.BeanUtils;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.backend.drunkknight.dto.CardDto;
import com.backend.drunkknight.request.CardDestailsModel;
import com.backend.drunkknight.response.CardRest;

@RestController
@RequestMapping("cards") // http://localhost:8080/cards
public class CardController {

	
	@GetMapping
	public String GetCard() {
		return "Get Card Called";
	}
	
	@PostMapping
	public CardRest CreateCard(@RequestBody CardDestailsModel cardDetails) {
		
		CardRest returnValue = new CardRest();
		
		CardDto cardDto = new CardDto();
		BeanUtils.copyProperties(returnValue, cardDto);
		
		CardDto createdCard = cardService.createCard(cardDto);
		
		
		return returnValue;
	}
	
	@PutMapping
	public String UpdateCard() {
		return "Put Card Called";
	}
	
	@DeleteMapping
	public String DeleteCard() {
		return "Delete Card Called";
	}
}
