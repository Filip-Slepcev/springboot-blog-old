package com.backend.drunkknight.service.implement;

import org.springframework.beans.BeanUtils;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.backend.drunkknight.dto.CardDto;
import com.backend.drunkknight.entity.CardEntity;
import com.backend.drunkknight.repository.CardRepository;
import com.backend.drunkknight.service.CardService;

@Service
public class CardServiceImplement implements CardService {

	@Autowired
	CardRepository cardRepository;
	
	
	@Override
	public CardDto createCard(CardDto card) {
		
		CardEntity cardEntity = new CardEntity();
		BeanUtils.copyProperties(card, cardEntity);
		
		cardEntity.setCardId("bruh");
		
		CardEntity storedCardDetails = cardRepository.save(cardEntity);
		
		CardDto returnValue = new CardDto();
		BeanUtils.copyProperties(storedCardDetails, returnValue);
		
		
		return returnValue;
	}

}
